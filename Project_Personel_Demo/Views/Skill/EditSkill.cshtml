@model Project_Personel_Demo.Models.TblSkill
@{
    ViewBag.Title = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Düzenleme Sayfası</h2>

<form method="post">
    <label>Yetenek ID</label>
    @Html.TextBoxFor(x => x.SkillID, new { @class = "form-control", @readonly = "" })
    <br />
    <label>Yetenek Başlığı</label>
    @Html.TextBoxFor(x => x.SkillTitle, new { @class = "form-control" })
    <br />
    <label>Yetenek Değer</label>
    @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control", @type = "number" })
    <br />

    <button class="btn btn-info">Yetenek Güncelle</button>
</form>